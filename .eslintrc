{
	"env": {
		"jquery": true,
		"node": true,
		"browser": true,
		"commonjs": true,
		"amd": true
	},
	"extends": [ "plugin:@wordpress/eslint-plugin/recommended" ],
	"globals": {
		"L": true
	},
	"rules": {
		"@wordpress/i18n-text-domain": [
			"error",
			{
				"allowedTextDomain": [ "connections" ]
			}
		]
	},
	"parserOptions": {
		"babelOptions": {
			"configFile": "./.babelrc"
		}
	}
}
