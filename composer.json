{
    "name": "connections/connections",
    "type": "wordpress-plugin",
    "description": "Business Directory for WordPress.",
    "keywords": [
        "connections"
    ],
    "homepage": "https://connections-pro.com/",
    "license": "GPL-2.0+",
    "require": {
        "php": ">=5.6.0"
    },
    "require-dev": {
        "automattic/vipwpcs": "*",
        "dealerdirect/phpcodesniffer-composer-installer": "*",
        "php-coveralls/php-coveralls": "*",
        "phpcompatibility/php-compatibility": "*",
        "phpcompatibility/phpcompatibility-wp": "*",
        "phpunit/phpunit": "*",
        "poststatus/wptest": "dev-master",
        "sirbrillig/phpcs-variable-analysis": "*",
        "squizlabs/php_codesniffer": "*",
        "wp-coding-standards/wpcs": "*"
    },
    "scripts": {
        "install-codestandards": [
            "Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run"
        ],
        "lint:php": "phpcs --report-file=PHPCS-report.txt",
        "lint:php:security": "phpcs --sniffs=WordPress.Security.EscapeOutput,WordPress.Security.NonceVerification,WordPress.Security.ValidatedSanitizedInput,WordPress.Security.SafeRedirect --report-file=PHPCS-report.txt",
        "phpcs": "phpcs",
        "phpcsi": "phpcs -i",
        "phpcbf": "phpcbf"
    },
    "support": {
        "issues": "https://wordpress.org/support/plugin/connections",
        "source": "https://github.com/Connections-Business-Directory/Connections"
    }
}
